<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="@dimen/start_margin">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_detail_poster"
                android:layout_width="@dimen/poster_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster_description"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_detail_poster"
                android:layout_toRightOf="@id/iv_detail_poster"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_detail_poster"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_title"
                android:layout_toEndOf="@id/iv_detail_poster"
                android:layout_toRightOf="@id/iv_detail_poster"
                android:drawableEnd="@drawable/star_yellow"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/star_yellow"
                android:gravity="start"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_title"
                app:layout_constraintLeft_toRightOf="@+id/iv_detail_poster"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tv_detail_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_rating"
                android:layout_toEndOf="@id/iv_detail_poster"
                android:layout_toRightOf="@id/iv_detail_poster"
                android:paddingTop="8dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_detail_rating"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_rating" />

            <ImageButton
                android:id="@+id/ib_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_white"
                android:background="@android:color/transparent"
                android:onClick="onClickFavorite"
                android:layout_below="@id/tv_detail_release"
                app:layout_constraintLeft_toLeftOf="@+id/tv_detail_release"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_release"
                android:layout_toEndOf="@id/iv_detail_poster"
                android:layout_toRightOf="@id/iv_detail_poster" />

            <TextView
                android:id="@+id/tv_detail_overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_detail_poster"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_detail_poster" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_trailers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_overview"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_overview"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_trailers"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_trailers"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>